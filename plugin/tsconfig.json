{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "customConditions": ["node"],
    "resolvePackageJsonExports": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "Bundler"
  },
  "include": ["src/**/*.ts", "src/types.d.ts"],
  "exclude": ["node_modules"]
}
